{
  "name": "claude-agent-server-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start:server": "bun run --filter @claude-agent/server start",
    "test:client": "bun run --elide-lines=0 --env-file=.env --filter @dzhng/claude-agent test",
    "docker:build": "docker build -t claude-agent-server .",
    "docker:run": "docker run -p 4000:4000 -v ~/.claude:/home/user/.claude:ro claude-agent-server",
    "docker:compose": "docker compose up"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@types/bun": "latest",
    "prettier": "^3.6.2",
    "typescript": "^5"
  }
}
